= form_for product, :html => { :multipart => true }  do |f|
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :desciption
    %br
    = f.text_area :description

  .field
    = f.label :price
    %br
    = f.text_field :price

  .field
    = f.label :quantity
    %br
    = f.text_field :quantity

  .field
    = f.file_field :image

  .action
    = f.submit
