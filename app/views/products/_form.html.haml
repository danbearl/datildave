= form_for product, :html => { :multipart => true }  do |f|
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :desciption
    %br
    = f.text_area :description

  .field
    = f.label :price
    %br
    = f.text_field :price

  .field
    = f.label :quantity
    %br
    = f.text_field :quantity

  .field
    = f.label :priority
    %br
    = f.number_field :priority

  .field
    = f.label :minimum_order
    %br
    = f.number_field :minimum_order

  .field
    = f.label :featured
    = f.check_box :featured

  .field
    = f.label :frozen_product
    = f.check_box :frozen_product

  .field
    = f.file_field :image

  .field
    = f.label :category_id
    %br
    = f.select(:category_id, options_for_select(categories_array_for_select, product.category_id))

  .action
    = f.submit
