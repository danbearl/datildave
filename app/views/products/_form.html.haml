= form_for product, :html => { :multipart => true }  do |f|
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :desciption
    %br
    = f.text_area :description

  .field
    = f.label :price
    %br
    = f.text_field :price

  .field
    = f.label :quantity
    %br
    = f.text_field :quantity

  .field
    = f.file_field :image

  .field
    = f.label :category_id
    %br
    = f.select(:category_id, options_for_select(categories_array_for_select, product.category_id))

  .action
    = f.submit
