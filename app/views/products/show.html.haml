
.row
  .span12
    %h1= product.name
  
    - if current_user
      %br
      = link_to "Edit", edit_product_path(product)
      |
      = link_to "Delete", product, confirm: "Deleting is irreversible. Do you wish to continue?", method: :delete

.row
  .span12
    = image_tag (product.image_url)

    %p
      Description:
      = product.description

    %p
      Price:
      = number_to_currency(product.price)

    %p
      Quantity:
      = product.quantity

    = form_tag action: :add_to_cart, method: :post do
      = hidden_field_tag :product_id, product.id
      = hidden_field_tag :product_name, product.name
      = hidden_field_tag :product_price, product.price

      %dt
        = label_tag :quantity, "Quantity"
      %dd
        = text_field_tag :quantity
      .action
        = submit_tag "Add To Cart"
