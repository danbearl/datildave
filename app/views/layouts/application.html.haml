!!! html
%html
  %head
    %title Datildave
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    
    - if current_user
      #user_nav
        = "Logged in as #{current_user.name} | "
        = link_to "Log Out", "/log_out"
        |
        = link_to "New Page", new_page_path
    #notice
      = notice
    #splash
      #logo
      #site_title
    #navigation
    #main
      = yield
